<!DOCTYPE html>
<html lang="en">
<head>
     <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/libs/bootstrap/dist/css/bootstrap.min.css">
    <title> Blogapp</title>
</head>
<body>

    <%- include("../partials/nav")  %> 

    <div class="container mt-3">
        <div class="row">
            <div class="col-md12 mt-3">
                <% if (typeof action !== "undefined" && action === "edit") { %>
                    <div class="alert alert-success">
                        <%= categoryid %> id numaralı kategori başarıyla güncellendi.
                    </div>
                <% } %>
                <% if (action != "undefined" && action == "create") { %>
                    <div class="alert alert-success">
                        Kategori başarıyla eklendi.
                    </div>
                <% } %>
                <% if (action != "undefined" && action == "delete") { %>
                    <div class="alert alert-danger">
                        Kategori başarıyla silindi.
                    </div>
                <% } %>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">id</th>
                            <th style="width: 200px;">Kategori Adı</th>
                            <th></th>
                            <th></th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        <% categories.forEach(category => { %>
                         <tr>
                            <td>#<%= category.categoryid %></td>
                            <td><%= category.name %></td>
                            
                            <td style="width: 100px;"><a class="btn btn-sm btn-primary" href="/admin/categories/<%= category.categoryid %>">Düzenle</a></td>
                            <td style="width: 100px;"><a class="btn btn-sm btn-danger" href="/admin/category/delete/<%= category.categoryid %>">Sil</a></td>
                         </tr>
                        <% }) %>
                    </tbody>
                    
                </table>
            </div>
        </div>
    </div>
    
</body>
</html>